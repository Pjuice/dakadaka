<view class='bkg'>

  <view class="ico">
    <view class="group_icon">
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>        
        </view>
  </view>
  <view class="line"></view>
<view class="textinfo">
  <view class="info align"> 
    <text> 创建日期：{{start_date}}</text>
  </view>
  <view class="info align">
    <text>打卡类别：{{classes}}</text>
  </view>
  <view class="info align">
    <text>奖惩额度：{{bid}}元/天</text>
  </view>
  
  <view class="info">
    <text>{{ttext}}</text>
    <text style=" word-break: break-all">{{brief_intro}}</text>
  </view>
</view>

  <view class='bottom'>
            <button bindtap="join" class='btn'>加入小组</button>
  </view>
  



</view>